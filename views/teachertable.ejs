  <body>
    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">

      <div class="android-header mdl-layout__header mdl-layout__header--waterfall">
        <div class="mdl-layout__header-row">
      
          <!-- Add spacer, to align navigation to the right in desktop -->
          <div class="android-header-spacer mdl-layout-spacer"></div>
          <div class="android-search-box mdl-textfield mdl-js-textfield mdl-textfield--expandable mdl-textfield--floating-label mdl-textfield--align-right mdl-textfield--full-width">
            <label class="mdl-button mdl-js-button mdl-button--icon" for="search-field">
              
            </label>
            <div class="mdl-textfield__expandable-holder">
              <input class="mdl-textfield__input" type="text" id="search-field">
            </div>
          </div>
          <!-- Navigation -->
          <div class="android-navigation-container">
            <nav class="android-navigation mdl-navigation">
              <a class="mdl-navigation__link mdl-typography--text-uppercase" href="">KTU TRACKER</a>
         
          </div>
          
          
          
          </ul>
        </div>
      </div>

      <div class="android-drawer mdl-layout__drawer">
        
          
        </span>
        <nav class="mdl-navigation">
          <a class="mdl-navigation__link" href="">Home</a>
          <a class="mdl-navigation__link" href="">Upload marks</a>
          <a class="mdl-navigation__link" href="">Logout</a>
          
          
        </nav>
      </div>

      <div class="android-content mdl-layout__content">
        <a name="top"></a>


          
    
          <div class="ttable">

              
            <table id="ttable">
                <tr>
                 <th>Student</th>
                 <th>Series 1</th>
                 <th>Series 2</th>
                 <th>Assignment</th>
                 <th>Attendence</th>
                </tr>
      <% data.forEach(function(student){ %>
        <tr>
          <td ><%=student.Student%></td>
          <td ><%=student.Series_1%></td>
          <td ><%=student.Series_2%></td>
          <td ><%=student.Assignment%></td>
          <td ><%=student.Attendance%></td>
        </tr>
        <% }); %>

              </table>
              <form class="login-form"  method="POST">
                <input type="text" name="Student" id="Student" placeholder="Student"/><br>
                <input type="text" name="Series1" id="Series1" placeholder="Series 1"/><br>
                <input type="text" name="Series2" id="Series2" placeholder="Series 2"/><br>
                <input type="text" name="Assignment" id="Assignment" placeholder="Assignment"/><br>
                <input type="text" name="Attendence" id="Attendence" placeholder="Attendence"/><br>
                <input type="submit" value="Save" / >
              </form>
        </div>
       
      </body>
      <script language="javascript">
          var tbl = document.getElementById("ttable");
          var stu = document.getElementById("Student");
          var ser1 =document.getElementById("Series1");
          var ser2 =document.getElementById("Series2");
          var ass =document.getElementById("Assignment");
          var att =document.getElementById("Attendence");
          
          if (tbl != null) {
  
            for (var i = 1; i < tbl.rows.length; i++) {
              tbl.rows[i].onclick = function () { fillCols(this); };
              }
  
          }
          function fillCols(student)
          {
            stu.value=student.cells[0].innerHTML;
            ser1.value=student.cells[1].innerHTML;
            ser2.value=student.cells[2].innerHTML;
            ass.value=student.cells[3].innerHTML;
            att.value=student.cells[4].innerHTML;
          }
          </script>
    <script src="https://code.getmdl.io/1.3.0/material.min.js"></script>
  </body>
